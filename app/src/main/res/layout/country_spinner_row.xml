<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#8b9dc3">

    <ImageView
        android:id="@+id/swe_image"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/sweden1" />

    <TextView
        android:id="@+id/swe_image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/swe_image"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_toEndOf="@+id/swe_image"
        android:gravity="center"
        android:text="@string/sweden"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="14sp" />


</RelativeLayout>